<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap.css">
        <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-responsive.css">
        <style type="text/css">
            body {
                padding-top: 40px;
                padding-bottom: 40px;
            }
            .hero-unit label {
                display: inline;
            }
            .hero-unit textarea {
                margin: 0px 0px 10px;
                width: 530px;
                height: 45px;
            }
        </style>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body data-spy="scroll" data-target=".navbar">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path('guestbook_homepage') }}">GuestbookBundle</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active"><a href="{{ path('guestbook_homepage') }}">Home</a></li>
                            <li><a href="{{ path('entry_new') }}">New entry</a></li>
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li><a href="{{ path('logout') }}">Logout</a></li>
                            {% else %}
                                <li>
                                    <a href="{{ path('login') }}">Login</a>
                                </li>
                                <li>
                                    <a href="{{ path('register') }}">Register</a>
                                </li>
                            {% endif %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li class="nav-header">Nav header</li>
                                    <li><a href="#">Separated link</a></li>
                                    <li><a href="#">One more separated link</a></li>
                                </ul>
                            </li>
                        </ul>
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <a class="pull-right" href="{{ path('logout') }}">Logout</a>
                        {% else %}
                        <form class="navbar-form pull-right" action="{{ path('login_check') }}" method="post">
                            <input class="span2" type="text" placeholder="Username" id="username" name="_username">
                            <input class="span2" type="password" placeholder="Password" id="password" name="_password">
                            <button type="submit" class="btn">Sign in</button>
                        </form>
                        {% endif %}
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for msg in app.session.flashbag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
        {% endif %}
        <div class="container">
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
            <footer>
                <p>Â© Sergey Polischook 2012</p>
            </footer>

        </div>
    </body>
</html>
